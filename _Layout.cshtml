    <script type="text/javascript">
	    function validate()
	    {
		    if(document.getElementById("message").value.length<25){
			    window.alert("Please enter a message of at least 25 characters");
		    }
		    else if(myform.name.value.length<10){
			    window.alert("Pease enter a name with more than 10 characters");
		    }
		    else if (myform.email.value.length<10){
			    window.alert("Pease enter an email with more than 10 characters");
		    }
		    else if (myform.email.value.indexOf("@@")==-1){
			    window.alert("Email must contain the '@@' symbol");
		    }
		    else if(myform.email.value.indexOf(".")==-1){
			    window.alert("Email must contain a period '.'");
		    }
		    else if((myform.name.value=="")||(myform.email.value=="")){
			    window.alert("Please fill in all fields");
		    }
		    else{
			    window.alert("Your question will be dealt with as soon as possible");
		    }
	    }
    </script>
    <script type="text/javascript">
        var timeCheck = setInterval(function () { updateTime() }, 1000);

        function updateTime() 
        {
            var myDate = new Date();
            document.getElementById("clock").innerHTML = myDate.toLocaleTimeString();
        }
    </script>
    <script type="text/javascript">
        var bannerChange = setInterval(function () { updateBanner() }, 5000);
        var i = 1;
        function updateBanner()
        {
            document.getElementById("banner").src = "pics/banner" + i + ".jpg";
            if(i == 5 ){
                i = 1;
            }
            else{
                i++;
            }
        }
    </script>
